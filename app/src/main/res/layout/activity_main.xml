<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp">

        <Button
            android:id="@+id/termsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="handleTermActivity"
            android:text="Terms"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="76dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp" />

        <Button
            android:id="@+id/coursesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="handleCourseActivity"
            android:text="Courses"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="176dp" />

        <Button
            android:id="@+id/assessmentsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="handleAssessmentsActivity"
            android:text="Assessments"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="276dp"
            tools:paddingBottom="10dp" />

    </LinearLayout>


</LinearLayout>