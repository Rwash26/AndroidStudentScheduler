<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:weightSum="100"
    android:orientation="vertical">

    <TextView
        android:id="@+id/c_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Title"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/c_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Start Date:"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/c_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Anticipated End Date:"

        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/c_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status here..."
        android:gravity="center"
        android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assessment List"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_assessments">

        </ListView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Mentor"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/mentor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mentor Name"
        android:textAlignment="gravity"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/mentor_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mentor Number"
        android:textAlignment="gravity"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/mentor_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mentor Email"
        android:textAlignment="gravity"
        android:textSize="15dp" />


</LinearLayout>